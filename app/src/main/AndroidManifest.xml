<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="snapchattapp.texnlog.com.snapchatapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-feature android:name="android.hardware.camera" />



    <activity android:name="com.example.barcode.CatalogActivity" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SnapChatApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TestingCameraActivity"
            android:label="SnapChatApp"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register"
            android:label="@string/title_activity_rgister"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PhotoPreview"
            android:theme="@style/AlertDialog.AppCompat"
            android:screenOrientation="portrait">
        </activity>
        <!-- <activity
            android:name=".TestingCameraActivity"
            android:theme="@style/AlertDialog.AppCompat"
            android:screenOrientation="portrait">
        </activity> -->
    </application>

</manifest>
